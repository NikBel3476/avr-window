{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cargo",
            "command": "build",
            "problemMatcher": [
                "$rustc"
            ],
            "label": "build",
            "args": [
                "--target",
                "avr-atmega128rfa1.json",
                "-Z",
                "build-std=core",
                "--release"
            ]
        },
        {
            "type": "shell",
            "command": "avrdude",
            "label": "flush",
            "args": [
                "-patmega128rfa1",
                "-cusbasp",
                "-Pusb",
                "-b57600",
                "-Uflash:w:target/avr-atmega128rfa1/release/avr_window.elf:e"
            ]
        },
        {
            "type": "shell",
            "label": "build and flush",
            "group": "build",
            "dependsOn": [
                "build",
                "flush"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "type": "cargo",
            "command": "rustc",
            "problemMatcher": [
                "$rustc"
            ],
            "label": "build with asm",
            "args": [
                "--target",
                "atmega128rfa1.json",
                "-Z",
                "build-std=core",
                "--release",
                "--",
                "--emit",
                "asm"
            ]
        },
    ]
}